# aliases
alias vi='vim'
alias tmux='tmux -2'

# environment variables
export EDITOR=vim
export PATH=$PATH:~/bin:~/.local/bin

# use vi mode
set -o vi

# fzf support
if [ -f ~/.fzf.bash ]; then
    source ~/.fzf.bash
    # use ag, if available
    if which ag &>/dev/null; then
        export FZF_DEFAULT_COMMAND='ag -l -g ""'
    fi
fi

